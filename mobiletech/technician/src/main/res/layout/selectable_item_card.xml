<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="cardTitle"
            type="java.lang.String" />

        <variable
            name="cardContent"
            type="java.lang.String" />

        <variable
            name="isEnabled"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/selector_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="@{isEnabled}"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/callTypeSelectorLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="95"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingStart="?attr/listPreferredItemPaddingLeft">

                        <TextView
                            android:id="@+id/cardTitleText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="@{isEnabled}"
                            android:text="@{cardContent == null? @string/selectable_item_card_title(cardTitle):cardTitle}"
                            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                            tools:text="Select an option" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center"
                            android:enabled="@{isEnabled}"
                            android:text="@{cardContent == null?@string/none:cardContent}"
                            tools:text="None" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/arrow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="5">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:visibility="@{isEnabled?View.VISIBLE:View.GONE}"
                            app:srcCompat="@drawable/ic_baseline_chevron_right"
                            tools:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>