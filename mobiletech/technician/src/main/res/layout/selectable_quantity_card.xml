<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="usedQuantity"
            type="java.lang.String" />

        <variable
            name="availableQuantity"
            type="java.lang.String" />

        <variable
            name="serialNumber"
            type="java.lang.String" />

        <variable
            name="isEnabled"
            type="boolean" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/sourceQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sourceBin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="?attr/listPreferredItemPaddingLeft"
            android:paddingEnd="?attr/listPreferredItemPaddingRight">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <EditText
                    android:id="@+id/txtQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="@{isEnabled}"
                    android:hint="@string/quantity"
                    android:inputType="number"
                    android:text="@{usedQuantity.equals(`0`)?``.trim():usedQuantity}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{serialNumber.equals(``)?``:@string/serial_number_param(serialNumber)}"
                    android:visibility="@{serialNumber.equals(``) || serialNumber == null?View.GONE:View.VISIBLE}"
                    tools:text="SN:" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/available_quantity_transfers(availableQuantity.equals(`0`)?`- -`:availableQuantity)}"
                    tools:text="Available: 40" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>