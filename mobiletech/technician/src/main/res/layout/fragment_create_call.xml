<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".fragments.createCall.CreateCallFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextAppearance="@style/ToolbarTitle" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/createcallBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="@string/customer_required"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/locationSelectorCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="8"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:paddingStart="?attr/listPreferredItemPaddingLeft"
                            android:paddingEnd="?attr/listPreferredItemPaddingRight">

                            <TextView
                                android:id="@+id/customerMainTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/select_customer"
                                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                tools:text="asdf" />

                            <TextView
                                android:id="@+id/customerNumberCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="Customer Number:codigo" />

                            <TextView
                                android:id="@+id/customerSecondaryTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:text="asdf" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rowContainer"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="25dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/ic_baseline_chevron_right"
                                tools:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="@string/equipment_required"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/equipmentSelectorCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/equipmentSearchLayoutArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingStart="?attr/listPreferredItemPaddingLeft"
                                android:paddingEnd="?attr/listPreferredItemPaddingRight">

                                <TextView
                                    android:id="@+id/mainTitleEquipment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/select_equipment"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                    tools:text="asdf" />

                                <TextView
                                    android:id="@+id/secondaryText1Equipment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="asdf" />

                                <TextView
                                    android:id="@+id/secondaryText2Equipment"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:text="asdf" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/ic_baseline_chevron_right"
                                    tools:visibility="visible" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="@string/remarks"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/remarksTxtField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/remarks"
                        android:inputType="text"
                        android:maxLength="128"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="@string/call_type_required"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/callTypeSelectorCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/callTypeSelectorLinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:orientation="horizontal"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="8"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:paddingStart="?attr/listPreferredItemPaddingLeft"
                                android:paddingEnd="?attr/listPreferredItemPaddingRight">

                                <TextView
                                    android:id="@+id/callTypeTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/select_call_type"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/callTypeDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center"
                                android:text="@string/none" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="25dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|center"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerInside"
                                    app:srcCompat="@drawable/ic_baseline_chevron_right"
                                    tools:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="@string/problem_description"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/descriptionTxtField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/problem_description"
                        android:maxLength="255"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:text="@string/caller_required"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="vertical"
                    app:cardCornerRadius="8dp">

                    <EditText
                        android:id="@+id/callerNameTxtField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/caller_name_amp_phone_or_email"
                        android:maxLength="255"
                        android:padding="8dp"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/assignToMeCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/assignToMe"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/createcallBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:enabled="false"
        android:text="@string/create_call_title"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView" />

</androidx.constraintlayout.widget.ConstraintLayout>