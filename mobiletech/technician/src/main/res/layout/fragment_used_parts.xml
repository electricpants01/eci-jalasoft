<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.allparts.UsedPartsFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/used_parts"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorHeadingText"
            app:layout_constraintEnd_toStartOf="@id/btnAddUsedPart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/btnAddUsedPart"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/ic_add_nav_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="?attr/selectableItemBackground"
            app:tint="@color/colorHeadingText"
            tools:visibility="visible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <include layout="@layout/view_separator" />
    <androidx.recyclerview.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/usedRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>