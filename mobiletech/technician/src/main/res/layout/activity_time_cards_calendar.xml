<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCalendarBackground"
    tools:context=".activities.TimeCardsCalendarActivity">


    <include
        android:id="@+id/appbarIncluded"
        layout="@layout/generic_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/appbarIncluded"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/weekViewContainer"
        android:fillViewport="true"
        android:nestedScrollingEnabled="true"
        android:paddingEnd="16dp"
        android:paddingStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <eci.technician.weekview.weekviewp.WeekView
                android:id="@+id/weekView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:eventTextColor="@android:color/white"
                app:textSize="12sp"
                app:eventTextSize="12sp"

                app:allDayEventHeight="20dp"
                app:hourHeight="30dp"
                app:showNowLine="true"
                app:nowLineColor="#000"
                app:eventCornerRadius="3dp"
                android:background="@color/colorCalendarBackground"
                app:headerColumnPadding="16dp"
                app:headerColumnTextColor="#606368"
                app:headerRowPadding="9dp"
                app:columnGap="0dp"
                app:noOfVisibleDays="3"
                app:headerRowBackgroundColor="@color/colorCalendarBackground"
                app:hourSeparatorHeight="1.3dp"
                app:hourSeparatorColor="#EDEDED"
                app:dayBackgroundColor="@android:color/white"
                app:todayBackgroundColor="@color/colorPrimaryDark"
                app:headerColumnBackground="#000"
                app:overlappingEventGap="2dp"
                app:todayHeaderTextColor="@color/colorPrimaryDark"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:id="@+id/myshadow"
                android:background="@drawable/myrect"/>
        </RelativeLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>