<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="eci.technician.activities.serviceOrderFilter.FilterServiceOrderActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextAppearance="@style/ToolbarTitle" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/applyFilterContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appbar">

            <LinearLayout
                android:id="@+id/containerFilters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/containerSortByDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sortByDateTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/sort_by"
                        android:textColor="@color/colorHeadingText" />

                    <ImageView
                        android:id="@+id/sortByDateButtonShowHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_baseline_arrow_up" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sortByDateContainerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerSortDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/container_one_item_layout_selectable" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/filterSectionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="0dp"
                    android:textStyle="bold"
                    android:text="@string/filters"
                    android:textColor="@color/colorHeadingText" />


                <FrameLayout
                    android:id="@+id/containerFilterDateTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/filterDateTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/filter_when"
                        android:textColor="@color/colorHeadingText" />

                    <ImageView
                        android:id="@+id/filterDateActionButtonShowHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_baseline_arrow_up" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/filterDateContainerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/container_one_item_layout_selectable" />
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/containerFilterWhenTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/filterStatusTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/status_filter"
                        android:textColor="@color/colorHeadingText" />

                    <ImageView
                        android:id="@+id/filterCallStatusActionButtonShowHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_baseline_arrow_up" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/filterCallStatusContainerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/container_one_item_layout_selectable" />
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/containerFilterGroupsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/filterGroupsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/filter_groups"
                        android:textColor="@color/colorHeadingText" />

                    <ImageView
                        android:id="@+id/filterGroupsActionButtonShowHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_baseline_arrow_up" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/filterGroupContainerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerGroups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/container_one_item_layout_selectable" />

                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/containerFilterPriorityTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/filterPriorityTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/priority_filter"
                        android:textColor="@color/colorHeadingText" />

                    <ImageView
                        android:id="@+id/filterCallPriorityActionButtonShowHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_baseline_arrow_up" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/filterCallPriorityContainerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPriorities"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/container_one_item_layout_selectable" />

                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/containerFilterTechnicianTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/filterTechnicianTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/technician_filter"
                        android:textColor="@color/colorHeadingText" />

                    <ImageView
                        android:id="@+id/filterCallTechnicianActionButtonShowHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_baseline_arrow_up" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/filterCallTechnicianContainerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTechnician"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/container_one_item_layout_selectable" />

                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/containerFilterCallTypeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/filterCallTypeTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:text="@string/call_type_filter"
                        android:textColor="@color/colorHeadingText" />

                    <ImageView
                        android:id="@+id/filterCallTypeActionButtonShowHide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="8dp"
                        android:src="@drawable/ic_baseline_arrow_up" />
                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/filterCallTypeContainerCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerCallTypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/container_two_item_layout_selectable" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/applyFilterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/applyFilterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="4dp"
                android:lines="1"
                android:text="@string/apply_filters"
                android:theme="@style/MyMaterialTheme"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>