<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerNeededPartsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.allparts.NeededPartsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/neededPartsHeaderTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/needed_parts"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/colorHeadingText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/redDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/unread_count"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/neededPartsHeaderTitle"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/btnAddNeededPart"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:src="@drawable/ic_add_nav_icon"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorHeadingText"
            tools:visibility="visible">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <include layout="@layout/view_separator" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/neededRecycler"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />

</LinearLayout>