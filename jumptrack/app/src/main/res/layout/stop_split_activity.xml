<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/bkgSecondary"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/invoiceCompNameTitle"
        style="@style/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true" />

    <ListView
        android:id="@android:id/list"
        style="@style/generalList"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        style="@style/editButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/accept_selected_button"
            style="@style/primaryEditButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dp"
            android:text="@string/acceptSelected"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/sel_cancel_button"
            style="@style/tertiaryButton"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@android:string/cancel"
            android:textAllCaps="false" />
    </LinearLayout>

</LinearLayout>
