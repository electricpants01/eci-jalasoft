<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/deliveryListTop"
            android:layout_width="fill_parent"
            android:background="@null"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/deliveryName"
                style="@style/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Delivery Name" />

            <ImageView
                android:id="@+id/deliveryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deliveryName"
                android:src="@drawable/delivery_icon" />

            <TextView
                android:id="@+id/deliveryDisplay"
                style="@style/deliveryNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/deliveryLabel"
                android:layout_toRightOf="@+id/deliveryLabel"
                tools:text="99999999" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/itemDetailProductName"
                style="@style/itemDetailProductName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="18sp"
                tools:text="Name" />

            <LinearLayout
                android:id="@+id/loadedView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loadedTextView"
                    style="@style/itemDetailQty"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    tools:text="999" />

                <ImageView
                    android:id="@+id/imgLoaded"
                    style="@style/loaded"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@string/empty" />
            </LinearLayout>

            <EditText
                android:id="@+id/partialQuantityEditText"
                style="@style/itemDetailEditQty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="5"
                android:minWidth="72dp"
                android:selectAllOnFocus="true"
                android:textSize="18sp"
                tools:text="999" />

            <TextView
                android:id="@+id/ofLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/of"
                android:textColor="@color/secondaryText"
                android:textSize="18sp"
                android:visibility="gone"
                tools:text="Label"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/targetTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="@color/secondaryText"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="999"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/uomTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/secondaryText"
                android:textSize="18sp"
                tools:text="UOM" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/skuTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Product SKU" />

            <TextView
                android:id="@+id/descriptionTextView"
                style="@style/itemDetailProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Product Description. Product Description. Product Description. Product Description. Product Description. Product Description. " />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemDetailPartialReasonsTag"
                style="@style/detailLabelGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/partialReasonLabel"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/partialReasonsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/removeLineButton"
                style="@style/tertiaryButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="@string/deleteItemLabel"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/saveLineButton"
                style="@style/primaryEditButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/platesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/scanView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/scanQuantityTextView"
                    style="@style/itemDetailProductDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="3"
                    android:gravity="center"
                    android:maxLength="9"
                    android:text="0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_scan_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/scanTextView"
                style="@style/itemDetailProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                tools:text="Scan: 9999" />

        </RelativeLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
