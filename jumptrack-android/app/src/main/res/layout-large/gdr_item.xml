<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/min_simple_row_height"
    android:orientation="horizontal"
    android:paddingTop="@dimen/min_padding_between_components"
    android:paddingBottom="@dimen/min_padding_between_components">

    <androidx.cardview.widget.CardView
        android:id="@+id/colorView"
        android:layout_width="@dimen/gdr_icon_size"
        android:layout_height="@dimen/gdr_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/large_icon_margin_horizontal"
        android:layout_marginLeft="@dimen/large_icon_margin_horizontal"
        android:layout_marginEnd="@dimen/min_padding_between_components"
        android:layout_marginRight="@dimen/min_padding_between_components"
        android:background="@android:color/black"
        app:cardBackgroundColor="@android:color/black"
        app:cardCornerRadius="4dp" />

    <TextView
        android:id="@+id/truckNameText"
        style="@style/routeListName_lrg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        tools:text="Route Name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingEnd="8dp"
        android:paddingRight="@dimen/large_icon_margin_horizontal">

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:textSize="16sp"
            tools:text="\@14:25" />

        <TextView
            android:id="@+id/ownerTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            tools:text="Assigned people" />

    </LinearLayout>


</LinearLayout>