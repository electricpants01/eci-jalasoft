<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ImageView
        style="@style/dealerLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/logoContDesc" />

    <EditText
        android:id="@+id/username"
        android:hint="@string/username"
        android:theme="@style/EditTextLoginStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:inputType="textNoSuggestions"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/password"
        android:hint="@string/password"
        android:theme="@style/EditTextLoginStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:inputType="textNoSuggestions|textPassword"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/chkShowPassword"
        android:theme="@style/generalCheckBoxStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:textColor="@color/login_control"
        android:text="@string/login_show_password"
        android:checked="false" />

    <ProgressBar
        android:id="@+id/loginProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:text="@string/loginLabel"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notACustomerLabel"
        android:textColor="@color/login_not_customer_link_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dip"
        android:text="@string/notACustomerLabel" />

    <TextView
        android:id="@+id/authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dip"
        android:text="@string/authorName" />

    <LinearLayout
        android:id="@+id/serverPrompt"
        android:visibility="gone"
        android:gravity="bottom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dip"
            android:layout_marginTop="5dp"
            android:text="@string/serverLabel"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/server"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"/>

    </LinearLayout>

</LinearLayout>