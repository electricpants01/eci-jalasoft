<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <FrameLayout
            android:id="@+id/signatureLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2">

            <ImageView
                android:id="@+id/signatureImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@android:color/white"
                android:contentDescription="@string/sigContDesc"
                android:gravity="center_horizontal|center_vertical|center"
                android:padding="8dp"
                android:scaleType="fitXY" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/receivedByCompanyNameLabel"
                style="@style/customerNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />

            <EditText
                android:id="@+id/receivedByText"
                android:layout_width="wrap_content"
                android:inputType="textCapSentences"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/receivedByCompanyNameLabel"
                android:ems="13"
                android:hint="@string/customerNameHint"
                android:maxLength="50" />

            <Button
                android:id="@+id/acceptRefuseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/receivedByText"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_green"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/doneLabel"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="false" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
